/**
 * Featured Bullets
 */
.featured-bullet
	text-align center
	font-size 16px
	margin 60px 0
	& h4
		font-weight bold
	& .read-more
		text-transform uppercase
		font-size 12px

.featured-bullet-icon
	height 80px
	width 80px
	border-radius 40px
	margin-bottom 35px
	& h2
		margin 0
		color white
		line-height 75px

.featured-item
	background #eff5f7
	padding 55px 0
	& h1
		font-weight 200
		margin-bottom 25px
	& p
		margin-bottom 20px
	& button
		margin-right 10px

.featured-item .featured-item-image
	max-width 100%
	margin-top: 25px