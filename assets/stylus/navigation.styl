/**
 * Navigation bar
 */
.navbar
	font-size 16px

.navbar a
	transition none
	outline none !important

.navbar-brand
	padding 0 !important

.navbar .fa
	font-size 8px
	position relative
	top -2px
	left 2px

.navbar .dropdown > .dropdown-menu
	display block
	opacity 0
	transition opacity .2s ease-in-out
	z-index -100

.navbar .dropdown:hover > .dropdown-menu
	opacity 1
	z-index 1000

.navbar-right .dropdown-menu
	left 20px
	right auto

.navbar-nav > li > .dropdown-menu
	border-top 2px solid brand-info
	border-radius 0
	padding 0
	font-size 16px

.navbar-nav .dropdown-menu > li
	border-bottom 1px solid #e1e4e7
	&:last-child
		border-bottom none

.navbar-nav .dropdown-menu > li > a
	padding 15px 20px

/**
 * Multi level dropdown
 */
.navbar-nav .dropdown-submenu
	position relative

.navbar-nav .dropdown-submenu > .dropdown-menu
	top 0
	left 100%
	margin-top -6px
	margin-left -1px
	border-radius 0

.navbar-nav .dropdown-submenu > .dropdown-menu
	display block
	opacity 0
	transition opacity .2s ease-in-out
	z-index -100

.navbar-nav .dropdown-submenu:hover > .dropdown-menu
	opacity 1
	z-index 1000

.navbar-nav .dropdown-submenu > .dropdown-menu
	margin-top -2px
	margin-left 0
	border-top 2px solid brand-info
	border-radius 0
	padding 0
	font-size 14px

.navbar-nav .dropdown-submenu > a:after
	display block
	content '\f054'
	font-family: 'FontAwesome'
	float right
	font-size 8px
	margin-top 7px
	margin-right -10px