/**
 * Contact Page
 */
.contact-page .google-map
	width 100%
	height 400px
	border none
	margin-bottom 60px

.contact-details
	& address
		color main-text
		line-height 20px
		margin 20px 0
	& .fa
		width 20px

.contact-detail-heading
	margin-bottom 25px

.contact-form .form-input-name,
.contact-form .form-input-email
	border-right none

.contact-form .input-group-addon
	color main-text
	& .fa-user
		padding 0 1px 0 2px

.contact-form .has-error .input-group-addon
	color #a94442

.contact-details .social-media-list a
	color main-text
	font-size 20px
	&:hover
		color brand-info