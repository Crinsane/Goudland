/**
 * Contact Page
 */
.contact-page .google-map
	width 100%
	height 400px
	border none
	margin-bottom 60px

.contact-details
	& address
		color main-text
		line-height 20px
		margin 20px 0
	& .fa
		width 20px

.contact-details .text-widget .widget-title,
.contact-details .contact-info-widget .widget-title,
.contact-details .widget_mc4wp_widget .widget-title
	font-size 24px
	padding-bottom 5px
	border-bottom 1px solid #c4c4c4

.contact-detail-heading
	margin-bottom 25px

.contact-form ::-webkit-input-placeholder
	color #c4c4c4;

.contact-form :-moz-placeholder
	color #c4c4c4;

.contact-form ::-moz-placeholder
	color #c4c4c4;

.contact-form :-ms-input-placeholder
	color #c4c4c4;

.contact-form .form-input-name,
.contact-form .form-input-email
	border-right none

.contact-form .input-group-addon
	color main-text
	border-color #c4c4c4
	& .fa-user
		padding 0 1px 0 2px

.contact-form .has-error .input-group-addon
	color #a94442

.contact-details .social-media-list a
	color main-text
	font-size 20px
	&:hover
		color brand-info